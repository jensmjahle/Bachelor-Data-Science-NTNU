    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/listFragmentContainerView"
        android:name="ntnu.idatt2506.assignment_4_idatt2506.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/informationFragmentContainerView"
        android:name="ntnu.idatt2506.assignment_4_idatt2506.InformationFragment"
